@model fubi_client.Models.Beneficiarios

<div class="container mt-4">
    <h2>Crear Beneficiario</h2>
    <form asp-action="Create" method="post">
        <div class="form-group">
            <label for="Cedula">Cédula</label>
            <input type="number" class="form-control" id="Cedula" name="Cedula" value="@Model.Cedula" required />
        </div>

        <div class="form-group">
            <label for="Beneficiario">Nombre Completo</label>
            <input type="text" class="form-control" id="Beneficiario" name="Beneficiario" value="@Model.Beneficiario" required />
        </div>

        <div class="form-group">
            <label for="Correo">Correo Electrónico</label>
            <input type="email" class="form-control" id="Correo" name="Correo" value="@Model.Correo" />
        </div>

        <div class="form-group">
            <label for="Telefono">Teléfono</label>
            <input type="number" class="form-control" id="Telefono" name="Telefono" value="@Model.Telefono" />
        </div>

        <div class="form-group">
            <label for="Direccion">Dirección</label>
            <textarea class="form-control" id="Direccion" name="Direccion" rows="3">@Model.Direccion</textarea>
        </div>

        <div class="form-group">
            <label for="RutaImagen">Ruta de Imagen</label>
            <input type="text" class="form-control" id="RutaImagen" name="RutaImagen" value="@Model.RutaImagen" />
        </div>

        <button type="submit" class="btn btn-primary mt-3">Guardar</button>
        <a class="btn btn-secondary mt-3" href="/Beneficiarios/Index">Cancelar</a>
    </form>
</div>
