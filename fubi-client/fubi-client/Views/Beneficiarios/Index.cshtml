@model List<fubi_client.Models.Beneficiarios>

<div class="container mt-4">
    <h2>Lista de Beneficiarios</h2>
    <a class="btn btn-primary mb-3" href="/Beneficiarios/Create">Crear Beneficiario</a>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>#</th>
                <th>Cédula</th>
                <th>Nombre</th>
                <th>Correo</th>
                <th>Teléfono</th>
                <th>Dirección</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Cedula</td>
                    <td>@item.Beneficiario</td>
                    <td>@item.Correo</td>
                    <td>@item.Telefono</td>
                    <td>@item.Direccion</td>
                    <td>
                        <a class="btn btn-info" href="/Beneficiarios/Edit/@item.Id">Editar</a>
                        <a class="btn btn-danger" href="/Beneficiarios/Delete/@item.Id">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

