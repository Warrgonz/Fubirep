@model List<fubi_client.Models.Beneficiarios>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-body">
        <div class="d-flex justify-content-between">
            <h5 class="card-title">Lista de Beneficiarios</h5>
            <a href="@Url.Action("Create", "Beneficiario")" class="btn btn-primary">Crear Beneficiario</a>
        </div>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Cédula</th>
                    <th>Nombre</th>
                    <th>Correo</th>
                    <th>Teléfono</th>
                    <th>Dirección</th>
                    <th>Estado</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Cedula</td>
                        <td>@item.Beneficiario</td>
                        <td>@item.Correo</td>
                        <td>@item.Telefono</td>
                        <td>@item.Direccion</td>
                        <td>@(item.Activo == true ? "Activo" : "Inactivo")</td>
                        <td>
                            <a href="@Url.Action("Edit", "Beneficiario", new { id = item.Id })" class="btn btn-warning btn-sm">Editar</a>
                            <form method="post" action="@Url.Action("ChangeEstado", "Beneficiario")" style="display:inline;">
                                <input type="hidden" name="id" value="@item.Id" />
                                <button type="submit" class="btn btn-sm @(item.Activo == true ? "btn-danger" : "btn-success")">
                                    @(item.Activo == true ? "Deshabilitar" : "Habilitar")
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
