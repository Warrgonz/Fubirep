@model fubi_client.Models.User

@{
    Layout = "~/Views/Shared/Public_Layout.cshtml";
}

@section Scripts {
    <script src="~/js/Login.js"></script>
}

<div class="d-lg-flex half">
    <div class="bg order-1 order-md-2"
         style="background-image: url('/images/young-adult-helping-disabled-friend.jpg');"></div>
    <div class="contents order-2 order-md-1">
        <div class="container">
            <div class="row align-items-center justify-content-center">
                <div class="col-md-7">
                    <div class="d-flex justify-content-center mb-4">
                    <img src="https://root-projects.s3.amazonaws.com/FUBIREDIP.png" class="fubi-logo" alt="Alternate Text" />
                    </div>
                    <p class="mb-4">
                        ¡Bienvenidos a FUBIREDIP! Por favor, inicia sesión para acceder a tu cuenta.
                    </p>
                    <div>
                        @if (ViewBag.Mensaje != null)
                        {
                            <div class="alert alert-danger text-center" id="error-message">@ViewBag.Mensaje</div>
                        }
                    </div>
                    <form asp-action="IniciarSesion" asp-controller="Home">
                        <div class="form-group first">
                            <label for="correo">Correo electrónico</label>
                            <input type="text"
                                   asp-for="correo"
                                   class="form-control"
                                   placeholder="ejemplo@correo.com"
                                   />
                        </div>
                        <div class="form-group mb-3">
                            <label for="contrasena">Contraseña</label>
                            <div class="el-hechicero d-flex align-items-center">
                                <input type="password"
                                       id="passwordInput"
                                       class="form-control"
                                       asp-for="contrasena"
                                       placeholder="Ingrese su contraseña" />
                                <a href="javascript:void(0)" onclick="elHechicero()">
                                    <ion-icon id="eyeIcon" name="eye-outline"></ion-icon>
                                </a>
                            </div>
                        </div>
                        <div class="d-flex mb-3 mt-3">
                            <a href="@Url.Action("RecuperarAcceso", "Home")" class="mx-1 mt-1 mb-1">¿Olvidaste tu contraseña?</a>
                        </div>        
                        <input type="submit" class="btn-acceder text-center" value="Acceder" />
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>