@model fubi_client.Models.User

<h2>Editar Mi Perfil</h2>

<form asp-action="MiPerfil" method="post">
    <div class="form-group">
        <label for="nombre">Nombre</label>
        <input asp-for="nombre" class="form-control" id="nombre" />
        <span asp-validation-for="nombre" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="primer_apellido">Apellidos</label>
        <input asp-for="primer_apellido" class="form-control" id="apellidos" />
        <span asp-validation-for="primer_apellido" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="correo">Correo Electrónico</label>
        <input asp-for="correo" class="form-control" id="correo" type="email" />
        <span asp-validation-for="correo" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="cedula">Cédula</label>
        <input asp-for="cedula" class="form-control" id="cedula" readonly />
        <span asp-validation-for="cedula" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Guardar Cambios</button>
</form>

@if (!string.IsNullOrEmpty(ViewBag.SuccessMessage))
{
    <div class="alert alert-success">
        @ViewBag.SuccessMessage
    </div>
}

@if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
{
    <div class="alert alert-danger">
        @ViewBag.ErrorMessage
    </div>
}
